@page "/servers"


<nav class="container text-center">
    <h4>Cities</h4>
    <div class="row">
       
        @foreach (var city in cities)
        {
           <div class="col">
                    <div class="card">
                        <img class="card-img-top" src="@($"/images/{city}.png")" alt="Card image cap">
                        <div class="card-body">
                             <button class="btn btn-sm btn-primary m-1">@city</button>
                        </div>
                    </div>
           </div>
          
        }
    </div>

</nav>

<h3>Servers</h3>


<ul>
    @foreach(var server in servers)
    {
        <li class="d-flex p-2">
            <span>@server.Name in @server.City is <span style="color:@(server.IsOnline?"green" :"red")">@(server.IsOnline ? "online" : "offline")</span></span>
            <a class="btn btn-sm me-1 btn-warning" href="/servers/edit/@server.ServerId">Edit Server</a>
        </li>
        
    }
</ul>


@code {

    private List<Server> servers = ServersRepository.GetServerByCity("Toronto");

    private List<string> cities = CityRepository.GetCities();

    public string getServersByCities()
    {
        return "<h1>cities</h1>";
    }



}
